@using Restaurant_Reservation_System_.Service.Dtos.ChefDtos;
@model ChefCreateDto

<br />
<br />
<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" for="exampleInputUsername1">Name</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" for="exampleInputSubtitle">Surname</label>
                <input type="text" class="form-control" id="exampleInputSurname" placeholder="Surname" asp-for="Surname">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" for="exampleInputSubtitle">Description</label>
                <input type="text" class="form-control" id="exampleInputDescription" placeholder="Description" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biographia" for="exampleInputSubtitle">Biographia</label>
                <input type="text" class="form-control" id="exampleInputBiographia" placeholder="Biographia" asp-for="Biographia">
                <span asp-validation-for="Biographia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" for="exampleInputUsername1"></label>
                <input class="form-control" id="exampleInputName" asp-for="Image" placeholder="Enter Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>