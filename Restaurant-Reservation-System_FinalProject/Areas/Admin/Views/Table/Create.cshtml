@model TableCreateDto
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label for="inputBlogTitle">Topic</label>
            <form method="post" asp-action="create" class="d-flex flex-wrap">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="TableNo" for="exampleInputUsername1"></label>
                        <input class="form-control" id="exampleInputName" asp-for="TableNo" placeholder="TableNo">
                        <span asp-validation-for="TableNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonCount" for="exampleInputUsername1"></label>
                        <input class="form-control" id="exampleInputName" asp-for="PersonCount" placeholder="PersonCount">
                        <span asp-validation-for="PersonCount" class="text-danger"></span>
                    </div>
                <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
                <div class="form-group col-lg-6">
                    <button type="submit" class="btn btn-light px-5">Submit</button>
                </div>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")

}