@model TableGetDto
@{
    ViewData["Title"] = "Edit";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <div class="form-group">
            <h3>Table</h3>
            <form method="post" asp-action="edit" class="d-flex flex-wrap">
                <label for="inputBlogTitle">TableNO</label>
                <div class="form-group col-lg-12">
                    <input  asp-for="TableNo" class="form-control" placeholder="TableNo .. ">
                    <span class="text-danger" asp-validation-for="TableNo"></span>

                </div>
                <label for="inputBlogTitle">PersonCount</label>
                <div class="form-group col-lg-12">
                    <input  asp-for="PersonCount" class="form-control" placeholder="PersonCount .. ">
                    <span class="text-danger" asp-validation-for="PersonCount"></span>

                </div>
                <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>