                        </div>
                        @foreach (var item in @Model.ProductImages)
                        {
                            <div class="col-2">
                                <img style="width:200px;" src="@Model.ProductImages.FirstOrDefault(x=>!x.IsMain)?.Url" />
                            </div>
                        }
                    </div>
 *@
                    <div class="row3"> <a class="btn btn-secondary" asp-action="Index">Cancel</a></div>
                </div>

            </div>
        </div>
    </div>
</div>

