@using Restaurant_Reservation_System_.Service.ViewModels.SliderVM;
@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Slider Title</label>
                <input asp-for="Title" class="form-control" id="inputBlogTitle" placeholder="Title.." maxlength="100">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Slider Description</label>
                <textarea asp-for="Description" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo">Logo</label>
                <input asp-for="Logo" accept="image/*" class="form-control" placeholder="Image.." maxlength="100">
                <img style="display:none;" height="100" width="300" id="imgPreview" src="" alt="" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image">Photo</label>
                <input asp-for="Image" accept="image/*" class="form-control" placeholder="Image.." maxlength="100">
                <img style="display:none;" height="100" width="300" id="imgPreview" src="" alt="" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>