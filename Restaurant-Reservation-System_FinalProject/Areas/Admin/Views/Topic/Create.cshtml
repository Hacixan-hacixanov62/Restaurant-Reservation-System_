@using Restaurant_Reservation_System_.Service.Dtos.TopicDtos
@model TopicCreateDto
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label for="inputBlogTitle">Topic</label>
            <form method="post" asp-action="create" class="d-flex flex-wrap">
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputUsername1">Name</label>
                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
                <div class="form-group col-lg-6">
                    <button type="submit" class="btn btn-light px-5">Submit</button>
                </div>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")

}