@using Restaurant_Reservation_System_.Service.Dtos.CategoryDtos;
@model CategoryCreateDto
@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label for="inputBlogTitle">Category</label>
            <form method="post" asp-action="create" class="d-flex flex-wrap">
                <div class="form-group col-lg-12">
                    <input asp-for="@Model.CategoryDetails[0].Name" class="form-control" placeholder="Category Name .. ">
                    <span class="text-danger" asp-validation-for="@Model.CategoryDetails[0].Name"></span>

                </div>
                <div class="col-lg-12" asp-validation-summary="ModelOnly"></div>
                <div class="form-group col-lg-6">
                    <button type="submit" class="btn btn-light px-5">Submit</button>
                </div>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")

}
