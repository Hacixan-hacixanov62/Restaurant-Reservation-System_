@using Restaurant_Reservation_System_.Core.Entittes;
 @model Category
@{
    ViewData["Title"] = "Detail";
}
<br />
<br />
<div class="card m-auto w-75">
    <div class="card-body">
        <h4 class="card-title">Category Detailed View</h4>
        <div class="d-flex">
            <div class="d-flex align-items-center text-muted font-weight-light">
                <i class="mdi mdi-clock icon-sm me-2"></i>
              @*   <p><b>Cerated date:</b> @Model.CreatedDate</p> *@
            </div>
        </div>
        <div class="d-flex mt-5 align-items-top">
            <div class="mb-0 flex-grow">

                <p><b>Title:</b> @Model.Title</p>
                <p><b>Subtitle:</b> @Model.SubTitle</p>
            </div>
            <div class="col">
                <a class="btn btn-gradient-primary me-2" asp-action="index">Go Back</a>
            </div>
        </div>
    </div>
</div>