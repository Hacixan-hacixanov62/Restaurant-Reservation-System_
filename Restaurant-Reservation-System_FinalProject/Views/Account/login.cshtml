@using Restaurant_Reservation_System_FinalProject.ViewModels;
@model UserLoginVM

<main class="login">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="/assets/images/home/restaurant-img-2.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form asp-action="login" method="post" id="booking-form">
                    <h2>Log In</h2>

                    <div class="form-group form-input">
                        <input asp-for="UserNameOrEmail" placeholder="Enter UserName" required />
                        <label asp-for="UserNameOrEmail"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
                    <div class="form-group form-input">
                        <input asp-for="Password" placeholder="Enter your Password" required />
                        <label asp-for="Password"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>



                    <div class="form-submit">
                        <input type="submit" value="Login" class="submit" id="submit" name="submit" />
                        <br />
                        <a asp-action="register" class="submit" >Register</a>
                        <p> 
                            <label asp-for="RememberMe">

                            </label>
                            <input asp-for="RememberMe" />
                        </p>
                        <a href="#" class="vertify-booking">Verify your booking info from your phone</a>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </form>
            </div>
        </div>

    </div>



</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"></script>

@section scripts {
