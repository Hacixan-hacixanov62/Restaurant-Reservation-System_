@using Restaurant_Reservation_System_FinalProject.ViewModels;
@model UserRegisterVM


<main class="register">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="~/assets/images/menu/img_11.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form asp-action="register" method="post">
                    <h2>Register</h2>

                    <div class="form-group form-input">
                        <input asp-for="FullName" placeholder="Enter FullName" required />
                        <label asp-for="FullName">FullName</label>
                    </div>
                    <span class="text-danger" asp-validation-for="FullName"></span>
                    <div class="form-group form-input">
                        <input asp-for="UserName" placeholder="Enter UserName" required />
                        <label asp-for="UserName"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="UserName"></span>
                    <div class="form-group form-input">
                        <input asp-for="Email" placeholder="Enter your Email" required />
                        <label asp-for="Email"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <div class="form-group form-input">
                        <input asp-for="Password" placeholder="Enter your Password" required />
                        <label asp-for="Password"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <div class="form-group form-input">
                        <input asp-for="ConfirmPassword" placeholder="Enter your ConfirmPassword" required />
                        <label asp-for="ConfirmPassword"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                        
                    <div class="form-submit">
                        <input type="submit" value="Register" class="submit" id="submit" name="submit" />
                        <br />
                        <a asp-action="login" class="submit">Login</a>
                        <p> <input type="checkbox" name="submit" /> Remember Me</p>
                        <a href="#" class="vertify-booking">Verify your booking info from your phone</a>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </form>
            </div>
        </div>

    </div>

</main>
@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}

