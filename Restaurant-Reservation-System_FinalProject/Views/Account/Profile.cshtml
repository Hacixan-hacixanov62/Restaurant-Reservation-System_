@using Restaurant_Reservation_System_FinalProject.ViewModels;
@model UserProfileVM

<div id="Account" class="light">
    <div class="container">
        <div class="text-center">

            <h3 class="opening-title">MY ACCOUNT</h3>

            <div class="d-flex justify-content-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">My account</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-4">
                <div class="left-list-group">
                    <ul>
                        <li class="item active">
                            <button type="button" class="list-group-item list-group-item-action">
                                <i class="ri-dashboard-horizontal-line"></i>
                                <span>DASHBOARD</span>
                            </button>
                        </li>
                        <li class="item">
                            <button type="button" class="list-group-item list-group-item-action">
                                <i class="ri-shopping-cart-line"></i>
                                <span>ORDERS</span>
                            </button>
                        </li>
                        <li class="item">
                            <button type="button" class="list-group-item list-group-item-action">
                                <i class="ri-account-pin-circle-fill"></i>
                                <span>ACCOUNT DETAILS</span>
                            </button>
                        </li>
                        <li class="item">
                            <a asp-action="logout" asp-controller="account" class="list-group-item list-group-item-action">
                                <i class="ri-logout-circle-r-line"></i>
                                <span>LOGOUT</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-8">
                <section class="DashboardSection">
                    <div class="content">

                        <h2 class="mt-3">Dashboard</h2>

                        <p class="mt-3">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestias quam
                            praesentium voluptatum laboriosam! Veritatis repellendus, atque exercitationem placeat
                            dicta culpa sapiente in alias molestiae, provident debitis, excepturi ducimus repellat
                            facere?
                        </p>
                    </div>
                </section>

                <section class="OrderSection">
                    <div class="content">

                        <h2 class="mt-3">Order</h2>

                        <div class="order-table mt-3">
                            <table>
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>TotalAmount</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Product</td>
                                        <td>Product</td>
                                        <td>Product</td>
                                        <td>Product</td>
                                        <td>Product</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>

                <section class="AccountSection">

                    <h2 class="mt-3 mb-4">Account Details</h2>

                    @await Html.PartialAsync("_UserProfileUpdatePartial", Model.UserProfileUpdateVM)

                </section>
            </div>
        </div>
    </div>
</div>



