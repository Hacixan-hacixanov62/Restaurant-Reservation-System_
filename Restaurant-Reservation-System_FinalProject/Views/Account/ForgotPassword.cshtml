@using Restaurant_Reservation_System_FinalProject.ViewModels;
@model ForgotPasswordVm
<main class="register">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="~/assets/images/menu/img_11.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form  method="post">

                    <h2>ForgotPassword Page</h2>    
                    
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"];
                        </div>
                    }
                    <div class="form-group form-input">
                        <input asp-for="Email" placeholder="Enter your Email" required />
                        <label asp-for="Email"></label>
                    </div>
                    <span class="text-danger" asp-validation-for="Email"></span>         
                    <div class="form-submit">
                        <input type="submit" value="Confirm" class="submit" id="submit" name="submit" />
                        <a href="#" class="vertify-booking">Verify your booking info from your phone</a>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </form>
            </div>
        </div>

    </div>

</main>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js" integrity="sha512-KFHXdr2oObHKI9w4Hv1XPKc898mE4kgYx58oqsc/JqqdLMDI4YjOLzom+EMlW8HFUd0QfjfAvxSL6sEq/a42fQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}