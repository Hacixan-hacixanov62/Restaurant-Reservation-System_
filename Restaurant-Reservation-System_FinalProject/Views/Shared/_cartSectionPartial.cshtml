@using Restaurant_Reservation_System_.Service.Dtos.BasketDtos
@model List<CartItemDto>
<a class="headercartbtn" href="">

    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            var product = item.Product;

            <span class="cart-btn-block cart-btn-icon">
                <i class="fa-solid fa-bag-shopping"></i>
            </span>
            <span class="cart-btn-block cart-btn-item">
                <span class="cart-btn-item-title" data-language="header.items"></span>
                <span class="cart-btn-item-count"> @item.Count</span>
            </span>
            <span class="cart-btn-block cart-btn-total">
                <div class="cart-left">
                    <span class="cart-btn-total-title" data-language="header.total"></span>
                    <span class="cart-btn-total-count"> $@(item.Product.Discount > 0 ? (int)item.Product.Discount : (int)item.Product.Price)</span>
                </div>
                <div class="cart-right">
                    <i class="fa-solid fa-caret-down"></i>
                </div>
            </span>
        }

    }
    else
    {
        <p>
            Cart is Empty
        </p>
    }
</a>