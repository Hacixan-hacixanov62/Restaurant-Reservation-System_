<body>
    <header>
        <div class="container">
            <div class="header-home">
                <div class="header-left">
                    <div class="header-logo">
                        <a href="/home.html">
                            <img src="~/assets/images/home/logo.png" alt="" />
                        </a>
                    </div>
                </div>
                <div class="header-center">
                    <nav>
                        <ul>
                            <li><a data-language="nav.home" href="/home.html"></a></li>
                            <li><a data-language="nav.menu" href="/menu.html"></a></li>
                            <li><a data-language="nav.reservation" href="/reservation.html"></a></li>
                            <li><a data-language="nav.blog" href="/blog.html"></a></li>
                            <li><a data-language="nav.shop" href="/shop.html"></a></li>
                            <li><a data-language="nav.contact" href="/contact.html"></a></li>
                        </ul>
                    </nav>
                </div>
                <div class="header-right">
                    <div class="header-cart">

                        <div class="mode-div">
                            <button type="button" class="switch-button">
                                <i class="fa-regular fa-moon"></i>
                            </button>
                        </div>

                        <div class="language-button-div">
                            <div class="language-dropdown">
                                <button class="language-button" type="button">
                                    <i class="fas fa-globe"></i>
                                    <span>EN</span>
                                </button>
                                <div class="dropdown-content" id="languageDropdown">
                                    <a href="#" data-lang="en">English</a>
                                    <a href="#" data-lang="az">Azərbaycan</a>
                                    <a href="#" data-lang="ru">Русский</a>
                                </div>
                            </div>
                        </div>

                        <a class="headercartbtn" href="">
                            <span class="cart-btn-block cart-btn-icon">
                                <i class="fa-solid fa-bag-shopping"></i>
                            </span>
                            <span class="cart-btn-block cart-btn-item">
                                <span class="cart-btn-item-title" data-language="header.items"></span>
                                <span class="cart-btn-item-count"> 1 </span>
                            </span>
                            <span class="cart-btn-block cart-btn-total">
                                <div class="cart-left">
                                    <span class="cart-btn-total-title" data-language="header.total"></span>
                                    <span class="cart-btn-total-count"> $111.00 </span>
                                </div>
                                <div class="cart-right">
                                    <i class="fa-solid fa-caret-down"></i>
                                </div>
                            </span>
                        </a>

                        <!-- Dropdown -->
                        <div class="log-reg">
                            <a href="/login.html" class="btn-login" data-language="header.login"></a>
                            <a href="/register.html" class="btn-register" data-language="header.register"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

            @RenderBody()
    <footer>
        <section id="Subscribe">
            <div class="container">
                <div class="row">
                    <div class="section-title">
                        <div class="discount">
                            <h5 data-language="home.subscribe.discount">15% OFF</h5>
                        </div>
                        <h2 data-language="home.subscribe.title">Subscribe to our</h2>
                        <h3 data-language="home.subscribe.newsletter">newsletter</h3>
                    </div>
                    <h5 data-language="home.subscribe.description">
                        Subscribe to our newsletter and receive 15% discount from your
                        order.
                    </h5>
                    <form method="post" name="mc-embedded-subscribe-form" novalidate="" class="mail-box clearfix">
                        <div class="input-group stylish-input-group">
                            <input type="text" class="form-control" placeholder="Your@mail.com"
                                   data-language="home.subscribe.placeholder" />
                            <div class="btn-default">
                                <button type="submit" data-language="home.subscribe.button">subscribe</button>
                            </div>
                        </div>
                        <div class="dn__newsletter-message"></div>
                    </form>
                </div>
            </div>
        </section>
