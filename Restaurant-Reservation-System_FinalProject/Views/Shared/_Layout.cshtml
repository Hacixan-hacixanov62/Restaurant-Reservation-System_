<body class="@mode">
    @await Component.InvokeAsync("Header")

            @RenderBody()
    <footer>
        <section id="Subscribe">
            <div class="container">
                <div class="row">
                    <div class="section-title">
                        <div class="discount">
                            <h5 data-language="home.subscribe.discount">15% OFF</h5>
                        </div>
                        <h2 data-language="home.subscribe.title">Subscribe to our</h2>
                        <h3 data-language="home.subscribe.newsletter">newsletter</h3>
                    </div>
                    <h5 data-language="home.subscribe.description">
                        Subscribe to our newsletter and receive 15% discount from your
                        order.
                    </h5>
                    <form method="post" name="mc-embedded-subscribe-form" novalidate="" class="mail-box clearfix">
                        <div class="input-group stylish-input-group">
                            <input type="text" class="form-control" placeholder="Your@mail.com"
                                   data-language="home.subscribe.placeholder" />
                            <div class="btn-default">
                                <button type="submit" asp-controller="Home" asp-action="AddSubscriber">subscribe</button>
                            </div>
                        </div>
                        <div class="dn__newsletter-message"></div>
                    </form>
                </div>
            </div>
        </section>
        <section id="Footer-main">
            <div class="container">
                <div class="footer-top">
                    <div class="row">
                        <div class="col-sm-12 col-md-3 col-lg-3">
                            <div class="head-chef">
                                <p data-language="footer.chefInfo">
                                    Chef Taylor Bonnyman, working in collaboration with Head Chef
                                    Marguerite Keogh, offer elegant &amp; playful modern British cooking.
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-2 col-lg-1">
                            <div class="f-nav">
                                <ul>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index"> Home </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Menu" asp-action="Index"> Menu </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Reservation" asp-action="ReserveTable"> Reservation </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Blog" asp-action="Index"> Blog </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Shop" asp-action="Index"> Shop </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Contact" asp-action="Index"> Contact </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="f-social-follower">
                                <a class="btn btn-default" href="reservation-form.html" role="button"
                                   data-language="footer.onlineReservation">online reservation</a>
                                <div class="f-follower">
                                    <h6 data-language="footer.follow">follow</h6>
                                    <ul>
                                        <li>
                                            <a href="https://www.facebook.com/"><i class="fa-brands fa-facebook-f"></i></a>
                                        </li>
                                        <li>
                                            <a href="https://twitter.com/"><i class="fa-brands fa-twitter"></i></a>
                                        </li>
                                        <li>
                                            <a href="https://www.instagram.com/"><i class="fa-brands fa-instagram"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fa fa-bell" aria-hidden="true"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-3 col-lg-4">
                            <div class="f-address-contact">
                                <p>+4 1800 555 1234</p>
                                <span>bookatable@restaurant.com</span>

                                <div class="f-address">
                                    <ul>
                                        <li>49 Featherstone Street</li>
                                        <li>LONDON</li>
                                        <li>EC1Y 8SY</li>
                                        <li>UNITED KINGDOM</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>
                        This Demo is also part of
                        <a href="https://kallyas.net/" title="Kallyas WordPress Theme">Kallyas WordPress Theme</a>. All rights
                        reserved.
                    </p>
                    <ul>
                        <li data-language="footer.copyright">copyright © 2016 <span>Kallyas.net</span></li>
                        <li><a href="hogash.com">Hogash.com</a></li>
                    </ul>
                </div>
            </div>
        </section>
    </footer>
